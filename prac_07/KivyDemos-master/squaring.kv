BoxLayout:
    orientation: 'horizontal'
    TextInput:
        id: input_number
        text: '8'
        font_size: 48
        multiline: False
    Button:
        text: 'Square'
        # the following line specifies the function in the app class to call when the button is pressed
        on_press: app.handle_calculate(int(input_number.text))
    Label:
        id: output_label
        font_size: 48
        color: (2, 0, 1, 2)

    BoxLayout:
        orientation: 'vertical'
        Label:
            id: instruct_label
            text:'Enter a number to be squared'
            font_size: 48
